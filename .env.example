# Environment Configuration Template
# Copy to .env and fill in values

# ============================================
# Environment
# ============================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# PostgreSQL (Workflow & Audit)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=compliance
POSTGRES_USER=compliance_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DSN=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# Snowflake (Read-Only Data)
# ============================================
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=compliance_service
SNOWFLAKE_PASSWORD=your_secure_password
SNOWFLAKE_WAREHOUSE=COMPLIANCE_WH
SNOWFLAKE_DATABASE=COMPLIANCE_DB
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=COMPLIANCE_READER

# ============================================
# Redis (Ephemeral State)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================
# OpenAI (LLM Provider)
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=org-your-org-id
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# ============================================
# Pinecone (Vector Store)
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=compliance-docs

# ============================================
# Document Output
# ============================================
OUTPUT_DIR=/var/compliance/output
TEMPLATE_DIR=/var/compliance/templates
ARCHIVE_DIR=/var/compliance/archive

# ============================================
# API Server
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ============================================
# Celery (Task Queue)
# ============================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ============================================
# Security
# ============================================
SECRET_KEY=your-256-bit-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-byte-encryption-key

# ============================================
# Observability
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=compliance-rag
PROMETHEUS_PORT=9090

# ============================================
# Fund Configuration
# ============================================
DEFAULT_FUND_IDS=FUND-001,FUND-002,FUND-003
COMPLIANCE_EMAIL=compliance@yourfund.com
ALERT_EMAIL=alerts@yourfund.com

# ============================================
# Thresholds & Limits
# ============================================
MAX_CONCURRENT_CONTROLS=10
CONTROL_TIMEOUT_SECONDS=300
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
